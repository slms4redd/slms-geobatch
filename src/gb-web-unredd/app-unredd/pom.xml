          <!--
          <outputDirectory>${site.outdir}</outputDirectory>
          <webappDirectory>${project.build.directory}/geobatch</webappDirectory>
          -->
        </configuration>
        <executions>
          <execution>
            <id>install</id>
            <phase>package</phase>
            <goals>
              <goal>war</goal>
            </goals>
          </execution>
          <execution>
            <id>site</id>
            <phase>site</phase>
            <goals>
              <goal>war</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>maven-jetty-plugin</artifactId>
        <version>6.1.8</version>
        <configuration>
          <contextPath>geobatch</contextPath>
          <connectors>
            <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
              <port>8081</port>
              <maxIdleTime>10000</maxIdleTime>
            </connector>
          </connectors>
          <contextPath>geobatch</contextPath>
          <webAppSourceDirectory>${project.build.directory}/geobatch</webAppSourceDirectory>
        </configuration>
      </plugin>
    </plugins>
